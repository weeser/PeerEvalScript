<Window x:Class="PeerReviewApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeerReviewApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="156.237" Width="159.148">
    <Grid>
        <Label Content="Max Group Size:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="uxMaxGroupSize" HorizontalAlignment="Left" Height="23" Margin="106,13,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top" Width="29" TextAlignment="Right"/>
        <Label Content="Question Count:" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="uxQuestionCount" HorizontalAlignment="Left" Height="23" Margin="106,41,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top" Width="29" TextAlignment="Right"/>
        <Button x:Name="uxButton_LoadStudents" Content="Load Students" HorizontalAlignment="Left" Margin="23,69,0,0" VerticalAlignment="Top" Width="96" Click="uxButton_LoadStudents_Click"/>
        <Button x:Name="uxButton_LoadSurvey" Content="Process Survey" HorizontalAlignment="Left" Margin="23,94,0,0" VerticalAlignment="Top" Width="96" Click="uxButton_LoadSurvey_Click" IsEnabled="False"/>

    </Grid>
</Window>
